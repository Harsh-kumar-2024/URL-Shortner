<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>URL-Shortener</title>
</head>
<body>
    <div class="container">
        <h1>URL Shrinker</h1>
    <form action="/shortUrls" method="POST" class="my-4 form-inline">
        <label for="fullURL" class="sr-only">*URL: </label>
        <input class="form-control col mr-2" placeholder="* URL" type="text" name="fullURL" id="fullURL" required>
        <button class="btn btn-success my-2" type="submit">Shrink</button>
    </form>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Full URL</th>
                <th>Short URL</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
            <% shortUrls.forEach(url => { %>
                <tr>
                    <td><a href="<%= url.fullUrl %>"><%= url.fullUrl %></a></td>
                    <td><a href="<%= url.shortUrl %>"><%= url.shortUrl %></a></td>
                    <td><%= url.clicks %></td>
                </tr>
            <% })%>
            
        </tbody>
    </table>
    </div>
</body>
</html>